# VivyaSense Environment Configuration
# Copy this file to .env and update with your settings

# Database Configuration
DATABASE_URL=postgresql://vivyasense:vivyasense123@postgres:5432/vivyasense_db

# Email Configuration (Optional - for alert notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Security Settings
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY_IN_PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Model Settings
CONFIDENCE_THRESHOLD=0.31
IOU_THRESHOLD=0.45

# Storage
UPLOAD_DIR=uploads
DETECTION_IMAGES_DIR=uploads/detections

